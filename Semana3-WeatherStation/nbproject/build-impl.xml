<?xml version="1.0" encoding="UTF-8"?>
<project name="WeatherStation-impl" default="default" basedir="..">
    <import file="project.properties"/>
    
    <target name="default" depends="compile"/>
    
    <target name="clean">
        <delete dir="${build.dir}"/>
        <delete dir="${dist.dir}"/>
    </target>
    
    <target name="init">
        <mkdir dir="${build.dir}"/>
        <mkdir dir="${build.classes.dir}"/>
        <mkdir dir="${dist.dir}"/>
    </target>
    
    <target name="compile" depends="init">
        <javac srcdir="${src.dir}" 
               destdir="${build.classes.dir}"
               includeantruntime="false"
               source="${javac.source}"
               target="${javac.target}"
               encoding="${source.encoding}">
            <compilerarg line="${javac.compilerargs}"/>
        </javac>
        <copy todir="${build.classes.dir}">
            <fileset dir="${src.dir}" excludes="${excludes}" includes="${includes}"/>
        </copy>
    </target>
    
    <target name="jar" depends="compile">
        <jar destfile="${dist.jar}" 
             basedir="${build.classes.dir}"
             manifest="${manifest.file}"/>
    </target>
    
    <target name="run" depends="compile">
        <java classname="${main.class}" 
              fork="true"
              classpath="${build.classes.dir}">
            <jvmarg line="${run.jvmargs}"/>
        </java>
    </target>
    
    <target name="debug" depends="compile">
        <java classname="${main.class}" 
              fork="true"
              classpath="${build.classes.dir}">
            <jvmarg value="-agentlib:jdwp=transport=dt_socket,server=y,suspend=y,address=5005"/>
            <jvmarg line="${run.jvmargs}"/>
        </java>
    </target>
    
    <target name="clean-build" depends="clean,compile"/>
    
</project>
